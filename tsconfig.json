{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es5",
    "lib": ["dom", "dom.iterable", "es2019"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react",
    "outDir": "dist",
    "rootDir": "src",
    "typeRoots": ["node_modules/@types", "shared/custom-type"]
  },
  "include": ["src"],
  "exclude": ["node_modules"],
  "files": ["./shared/custom-types/index.d.ts"]
}
